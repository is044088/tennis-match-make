          <%= link_to "/posts/#{post.id}" do %>
            <div class="new-tennis__container__contents clearfix">
              <div class="new-tennis__container__contents__box">
                <div class="new-tennis__container__contents__picture"> 
                  <%= image_tag post.image, width:"120", height:"120", alt:"image", class: "new-tennis__container__contents__picture__image"%>
                </div>
                <div class="new-tennis__container__contents__detail">
                  <div class="new-tennis__container__contents__detail__column">
                    <div class="new-tennis__container__contents__detail__title">タイトル：</div>
                    <div class="new-tennis__container__contents__detail__date">開催日時：</div>
                    <div class="new-tennis__container__contents__detail__place">場所：</div>
                    <div class="new-tennis__container__contents__detail__condition">参加条件：</div>
                  </div>
                  <div class="new-tennis__container__contents__detail__value">
                    <div class="new-tennis__container__contents__detail__value__title">
                      <span><%= post.title %></span>
                    </div>
                    <div class="new-tennis__container__contents__detail__value__date">
                      <span><%= post.date.strftime("%Y年%m月%d日(%a)") %> <%= post.start_time.strftime("%-H:%M") %> ~ <%= post.end_time.strftime("%-H:%M") %></span>
                    </div>  
                    <div class="new-tennis__container__contents__detail__value__place">
                      <span><%= post.address %>    <%= post.venue %></span>
                    </div>
                  </div>
                </div>
              </div>  
              <div class="new-tennis__container__contents__jouken">
                <div class="new-tennis__container__contents__jouken__table">
                  <table border="1" cellpadding="6" cellspacing="0">
                    <tr>
                      <th>参加費</th>
                      <th>スキル(平均)</th>
                      <th>コミュ力</th>
                      <th>年齢制限</th>
                      <th>利き腕制限</th>
                      <th>性別制限</th>
                    </tr>
                    <tr>
                      <td>
                        <% if post.cost.blank? %>
                          <span>なし</span>
                        <% else %>
                          <%= post.cost %>
                        <% end %>
                      </td>
                      <td>
                        <% if post.ave_low.blank? && post.ave_high.blank?%>
                          <span>問わない</span>
                        <% else %>
                          <span><%= post.ave_low %> ~ <%= post.ave_high %></span>
                        <% end %>
                      </td>
                      <td>
                        <% if post.com_low.blank? && post.com_high.blank?%>
                          <span>問わない</span>
                        <% else %>
                          <span><%= post.com_low %> ~ <%= post.com_high %></span>
                        <% end %>
                      </td>
                      <td>
                        <% if post.age.blank? %>
                          <span>問わない</span>
                        <% else %>
                          <span><%= post.age %>代限定</span>
                        <% end %>
                      </td>
                      <td>
                        <% if post.dominant.blank? %>
                          <span>問わない</span>
                        <% else %>
                          <span><%= post.dominant %>のみ</span>
                        <% end %>
                      </td>
                      <td>
                        <% if post.sex.blank? %>
                          <span>問わない</span>
                        <% else %>
                          <span><%= post.sex %>のみ</span>
                        <% end %>
                      </td>
                    </tr>
                  </table>
                </div>    
              </div>
            </div> 
          <% end %>